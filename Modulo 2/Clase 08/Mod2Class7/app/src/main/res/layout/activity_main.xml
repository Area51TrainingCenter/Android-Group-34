<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jcodee.mod2class7.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnPresionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/presionar" />

        <Button
            android:id="@+id/btnObtenerUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/obtener_usuarios" />

        <Button
            android:id="@+id/btnObtenerLocacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/obtener_locacion" />
    </LinearLayout>

    <EditText
        android:id="@+id/tvLatLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
